{
    "name": "sheerockoff/bitrix-elastic-indexer",
    "description": "Bitrix infoblocks indexer into Elasticsearch.",
    "type": "library",
    "license": "Unlicense",
    "authors": [
        {
            "name": "Vitalik Shirokov",
            "email": "vitalik.shirokov@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Sheerockoff\\BitrixElastic\\": "src/"
        }
    },
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "elasticsearch/elasticsearch": "^8.8"
    },
    "autoload-dev": {
        "psr-4": {
            "Sheerockoff\\BitrixElastic\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "symfony/var-dumper": "^4.3",
        "sheerockoff/bitrix-ci": "21.400"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
